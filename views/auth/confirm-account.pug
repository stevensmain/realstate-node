extends ../layouts/index

block content
        h1.text-4xl.my-10.font-bold.text-center Real
            span.font-normal State
        h2.text-2xl.text-center.font-bold= title

        div(class="bg-white shadow mt-4 px-4 py-8 rounded-lg max-w-md mx-auto")
            p(class= error ? "bg-red-500":"bg-green-500").text-center.py-2.px-5.rounded-lg.w-full= msg

            if !error
                a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-4 block") Login