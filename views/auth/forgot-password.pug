extends ../layouts/index

block content
        h1.text-4xl.my-10.font-bold.text-center Real
            span.font-normal State
        h2.text-2xl.text-center.font-bold= title

        if errors && errors.auth
            .bg-red-500.p-2.max-w-md.mx-auto.mt-4.rounded
                p.text-white.text-sm.font-bold= errors.auth
        
        form(method="POST" action="/auth/forgot-password" ).bg-white.px-4.py-6.shadow.max-w-md.mt-4.mx-auto.space-y-4
            input(type="hidden" name="_csrf" value= csrf)
            div
                label.block.text-sm.uppercase.text-gray-600.font-bold(for="email") Email
                input#email.w-full.px-3.py-1.border.border-gray-300.rounded(placeholder="Your email" type="email" name="email")
                if errors && errors.email
                    p.text-sm.text-red-500= errors.email
            
            .flex.items-center.justify-between
                a(href="/auth/register").text-gray-500.text-sm.font-semibold.cursor-pointer Don't have a account?
                a(href="/auth/login").text-gray-500.text-sm.font-semibold.cursor-pointer Already have an account?

            input(class="py-2 px-4 bg-sky-300 rounded text-white font-semibold cursor-pointer hover:bg-sky-400 w-full" type="submit" value="Confirm")
            