extends ../layouts/index

block content
        h1.text-4xl.my-10.font-bold.text-center Real
            span.font-normal State
        h2.text-2xl.text-center.font-bold= title

        form(action="post").bg-white.px-4.py-6.shadow.max-w-md.mt-4.mx-auto.space-y-3
            div
                label.block.text-sm.uppercase.text-gray-600.font-bold(for="email") Email
                input#email.w-full.px-3.py-1.border.border-gray-300.rounded(placeholder="Your email" type="email" name="email")
            div
                label.block.text-sm.uppercase.text-gray-600.font-bold(for="password") Password
                input#password.w-full.px-3.py-1.border.border-gray-300.rounded(placeholder="Write your password" type="password" name="password")
            
            .flex.items-center.justify-between
                a(href="/auth/register").text-gray-500.text-sm.font-semibold.cursor-pointer Don't have a account?
                a(href="/auth/forgot-password").text-gray-500.text-sm.font-semibold.cursor-pointer Forgot password?

            input(class="py-2 px-4 bg-sky-300 rounded text-white font-semibold cursor-pointer hover:bg-sky-400 w-full" type="submit" value="Sign in")

        .bg-white.px-4.py-6.shadow.max-w-md.mt-4.mx-auto.space-y-4
            span.font-normal.text-gray-600 New in RealState? 
                a.text-sky-300.font-normal.mt-4.cursor-pointer(href="/auth/register") Create account
            